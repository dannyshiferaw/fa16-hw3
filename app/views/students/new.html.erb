<form action="/students" method="POST">
  <label>Full Name</label>
  <input 
    name="full_name" 
    placeholder=<%= @placeholder_full_name %> 
    type="text">
  </input>

  <label>Student ID</label>
  <input
    name="student_ID"
    placeholder=<%= @placeholder_student_ID %>
    type="text">
  </input>

  <label>Major</label>
  <input 
  name="major" 
  placeholder=<%= @placeholder_major %> 
  type="text">
  </input>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <button type="submit">Create Students</button>
</form>
